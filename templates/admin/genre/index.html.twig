{% extends 'admin/base.html.twig' %}

{% block title %} Lister les genres {% endblock %}

{% block body %}
    <h1> Lister les genres</h1>

    <a href="{{ path('app_admin_genre_ajouter') }}" class="btn btn-success">Ajouter un genre</a>

    <table class="table mt-5">
        <thead>
        <tr>
            <th scope="col">Nom</th>
            <th scope="col">Popularité</th>
            <th scope="col">Couleur</th>
            <th scope="col">Actions (modifier/supprimer)</th>
        </tr>
        </thead>

        <tbody>
        {% for genre in genres %}
            <tr>
                <td>{{ genre.nom }}</td>
                <td>{{  genre.popularite }}</td>
                <td>@{{ genre.couleur }}</td>
                <td>
                    <a href="{{  path('app_admin_genre_modifier',{'id': genre.id}) }}" class="btn btn-sm btn-primary">Modifier</a>
                    <a href="{{  path('app_admin_genre_supprimer',{'id': genre.id}) }}" class="btn btn-sm btn-danger" onclick="return confirm('Êtes vous sûr de vouloir SUPPRIMER ?')">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>

    </table>
{% endblock %}
