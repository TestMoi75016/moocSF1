{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}


{% block title %}
	Connectez-vous sur LocaJeu
{% endblock %}

{% block stylesheets %}
	{{parent()}}
	{# afin de ne pas Ã©craser le block stylesheets dans base #}
	{{ encore_entry_link_tags('login') }}
{% endblock %}

{% block body %}
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

	<div class="container">
		<div class="row">
			<div class="col-md-6 offset-md-3">
				<h2 class="text-center text-dark mt-5">Connectez-vous</h2>
				<div class="card my-5">


					<form action="{{ path('app_login') }}" method="post" class="card-body cardbody-color p-lg-5">

						<div class="text-center">
							<img src="https://cdn.pixabay.com/photo/2016/03/31/19/56/avatar-1295397__340.png" class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3" width="200px" alt="profile">
						</div>

						<div class="mb-3">
							<input type="text" id="username" name="_username" value="{{ last_username }}" required class="form-control" placeholder="Votre email">
						</div>
						<div class="mb-3">
							<input type="password" id="password" name="_password" required class="form-control" placeholder="Mot de passe">
						</div>
						<div class="text-center">
							<button type="submit" class="btn btn-color px-5 mb-5 w-100">Connexion</button>
						</div>
						<div id="emailHelp" class="form-text text-center mb-5 text-dark">Not
																																																																																																																									              Registered?
							<a href="#" class="text-dark fw-bold">
								Create an
																																																																																																																																										                Account</a>
						</div>
					</form>
				</div>

			</div>
		</div>
	</div>


	{# If you want to control the URL the user is redirected to on success
																																									        <input type="hidden" name="_target_path" value="/account"> #}

	<button type="submit">login</button>
</form>{% endblock %}
