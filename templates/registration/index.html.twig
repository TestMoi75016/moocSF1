{% extends 'base.html.twig' %}

{% block title %}Inscrivez-vous sur LocaJeu
{% endblock %}

{% block body %}
	<div
		class="container w-25 m-auto mt-5">
		{# method form_start ("ici: variable 'form' qui contient notre formulaire") #}
		{{ form_start(form) }}
		{{ form_row(form.email) }}
		<div class="row">
			<div class="col">{{ form_label(form.prenom) }} * {{ form_widget(form.prenom) }} {{ form_errors(form.prenom) }}</div>
			<div class="col">{{ form_row(form.nom) }}</div>
		</div>
		{{ form_row(form.password) }}

		<button type="submit" class="btn btn-success">S'inscrire</button>
		{{ form_end(form) }}
		{# ainsi j'inclu mon bouton "submit" ds mon formulaire qui n'en contenait pas de base , ce qui rend intéractif ce bouton d'aurénavant#}
	</div>
{% endblock %}
